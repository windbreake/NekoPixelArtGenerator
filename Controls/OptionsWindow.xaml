<Window x:Class="PixelArtGenerator.Controls.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选项设置" Height="500" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="选项设置" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <GroupBox Header="Python环境设置" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Python路径:" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="PythonPathTextBox" Grid.Column="0" Margin="0,0,10,10"/>
                        <Button x:Name="BrowsePythonPathButton" Grid.Column="1" Content="浏览..." Click="BrowsePythonPathButton_Click" HorizontalAlignment="Left" Width="80" Margin="0,0,10,10"/>
                        <Button x:Name="AutoDetectPythonButton" Grid.Column="2" Content="自动检测" Click="AutoDetectPythonButton_Click" HorizontalAlignment="Left" Width="80" Margin="0,0,0,10"/>
                    </Grid>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="临时文件设置" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="临时文件目录:" Margin="0,0,0,5"/>
                    <TextBox x:Name="TempDirectoryTextBox" Margin="0,0,0,10"/>
                    <Button x:Name="BrowseTempDirectoryButton" Content="浏览..." Click="BrowseTempDirectoryButton_Click" HorizontalAlignment="Left" Width="80"/>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="日志查看" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="LogPathTextBox" Grid.Column="0" IsReadOnly="True" Margin="0,0,10,10"/>
                        <Button x:Name="ViewLogButton" Grid.Column="1" Content="查看日志" Click="ViewLogButton_Click" HorizontalAlignment="Left" Width="80" Margin="0,0,0,10"/>
                    </Grid>
                    <Button x:Name="ClearLogButton" Content="清空日志" Click="ClearLogButton_Click" HorizontalAlignment="Left" Width="80"/>
                </StackPanel>
            </GroupBox>
            
            <CheckBox x:Name="AutoInstallDependenciesCheckBox" Content="自动安装Python依赖" Margin="0,0,0,10"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OKButton" Content="确定" Width="80" Margin="0,0,10,0" Click="OKButton_Click"/>
            <Button x:Name="CancelButton" Content="取消" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>