<Window x:Class="PixelArtGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelArtGenerator"
        mc:Ignorable="d"
        Title="像素画生成工具" Height="800" Width="1400" 
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">
    
    <Window.Resources>
        <!-- 控件样式 -->
        <Style x:Key="ParameterSliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="4"/>
            <Setter Property="Maximum" Value="64"/>
            <Setter Property="Value" Value="16"/>
            <Setter Property="TickFrequency" Value="4"/>
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="BorderBrush" Value="#464647"/>
            <Setter Property="Foreground" Value="#007ACC"/>
        </Style>
        
        <Style x:Key="ControlLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="BorderBrush" Value="#464647"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        
        <Style x:Key="ToolButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="BorderBrush" Value="#464647"/>
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 菜单栏 -->
            <RowDefinition Height="Auto"/> <!-- 工具栏 -->
            <RowDefinition Height="*"/>    <!-- 主工作区 -->
            <RowDefinition Height="Auto"/> <!-- 状态栏 -->
        </Grid.RowDefinitions>
        
        <!-- 菜单栏 -->
        <Menu Grid.Row="0" Background="#2D2D30" Foreground="#F1F1F1">
            <MenuItem Header="文件(F)">
                <MenuItem Header="打开图片..." Click="OpenImage_Click" InputGestureText="Ctrl+O"/>
                <MenuItem Header="保存结果..." Click="SaveResult_Click" InputGestureText="Ctrl+S"/>
                <Separator/>
                <MenuItem Header="批量处理..." Click="BatchProcess_Click"/>
                <Separator/>
                <MenuItem Header="退出" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="编辑(E)">
                <MenuItem Header="撤销" Click="Undo_Click" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="重做" Click="Redo_Click" InputGestureText="Ctrl+Y"/>
                <Separator/>
                <MenuItem Header="重置参数" Click="ResetParameters_Click"/>
            </MenuItem>
            <MenuItem Header="视图(V)">
                <MenuItem Header="适应窗口" Click="FitToWindow_Click"/>
                <MenuItem Header="实际大小" Click="ActualSize_Click"/>
                <Separator/>
                <MenuItem Header="显示网格" IsCheckable="True" Checked="ShowGrid_Checked" Unchecked="HideGrid_Unchecked"/>
            </MenuItem>
            <MenuItem Header="工具(T)">
                <MenuItem Header="选项..." Click="Options_Click"/>
                <MenuItem Header="查看日志" Click="ViewLog_Click"/>
            </MenuItem>
            <MenuItem Header="帮助(H)">
                <MenuItem Header="关于..." Click="About_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- 工具栏 -->
        <ToolBar Grid.Row="1" Background="#3C3C3C">
            <Button Style="{StaticResource ToolButtonStyle}" Click="OpenImage_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/Icons/open.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="打开"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource ToolButtonStyle}" Click="SaveResult_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/Icons/save.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="保存"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Style="{StaticResource ToolButtonStyle}" Click="ProcessImage_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/Icons/process.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="处理"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource ToolButtonStyle}" Click="ResetParameters_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Resources/Icons/reset.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="重置"/>
                </StackPanel>
            </Button>
        </ToolBar>
        
        <!-- 主工作区 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>    <!-- 图片显示区域 -->
                <ColumnDefinition Width="300"/>  <!-- 参数控制面板 -->
            </Grid.ColumnDefinitions>
            
            <!-- 图片显示区域 -->
            <Grid Grid.Column="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 原始图片 -->
                <Border Grid.Row="0" Grid.Column="0" BorderBrush="#464647" BorderThickness="1" Margin="5">
                    <Grid>
                        <Image x:Name="OriginalImage" Stretch="Uniform" AllowDrop="True" 
                               Drop="ImageViewer_Drop" DragEnter="ImageViewer_DragEnter"/>
                        <TextBlock x:Name="OriginalImagePlaceholder" Text="拖拽图片到这里或点击打开" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="#CCCCCC" FontSize="14" IsHitTestVisible="False"/>
                    </Grid>
                </Border>
                
                <!-- 像素画预览 -->
                <Border Grid.Row="0" Grid.Column="1" BorderBrush="#464647" BorderThickness="1" Margin="5">
                    <Grid>
                        <Image x:Name="PixelArtPreview" Stretch="Uniform"/>
                        <TextBlock x:Name="PreviewPlaceholder" Text="处理后的像素画将显示在这里" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="#CCCCCC" FontSize="14" IsHitTestVisible="False"/>
                    </Grid>
                </Border>
                
                <!-- 标签 -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="原始图片" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"
                           Style="{StaticResource ControlLabelStyle}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="像素画预览" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"
                           Style="{StaticResource ControlLabelStyle}"/>
            </Grid>
            
            <!-- 参数控制面板 -->
            <ScrollViewer Grid.Column="1" Background="#3C3C3C" Margin="5">
                <StackPanel Margin="10">
                    
                    <!-- 基本参数 -->
                    <GroupBox Header="基本参数" Style="{StaticResource GroupBoxStyle}">
                        <StackPanel Margin="0,10,0,0">
                            <!-- 像素大小 -->
                            <TextBlock Text="像素大小:" Style="{StaticResource ControlLabelStyle}"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="PixelSizeSlider" Grid.Column="0" 
                                        Style="{StaticResource ParameterSliderStyle}"
                                        ValueChanged="PixelSizeSlider_ValueChanged"/>
                                <TextBlock x:Name="PixelSizeValue" Grid.Column="1" 
                                           Text="16" Foreground="#F1F1F1" 
                                           Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <!-- 颜色数量 -->
                            <TextBlock Text="颜色数量:" Style="{StaticResource ControlLabelStyle}"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="ColorCountSlider" Grid.Column="0" 
                                        Minimum="2" Maximum="256" Value="32" 
                                        TickFrequency="8" IsSnapToTickEnabled="True"
                                        ValueChanged="ColorCountSlider_ValueChanged"/>
                                <TextBlock x:Name="ColorCountValue" Grid.Column="1" 
                                           Text="32" Foreground="#F1F1F1" 
                                           Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <!-- 调色板选择 -->
                            <TextBlock Text="调色板:" Style="{StaticResource ControlLabelStyle}"/>
                            <ComboBox x:Name="PaletteComboBox" 
                                      Background="#3C3C3C" Foreground="#F1F1F1"
                                      BorderBrush="#464647" Margin="0,0,0,10"
                                      SelectionChanged="PaletteComboBox_SelectionChanged"/>
                            
                            <!-- 算法选择 -->
                            <TextBlock Text="处理算法:" Style="{StaticResource ControlLabelStyle}"/>
                            <ComboBox x:Name="AlgorithmComboBox" 
                                      Background="#3C3C3C" Foreground="#F1F1F1"
                                      BorderBrush="#464647" Margin="0,0,0,10"
                                      SelectionChanged="AlgorithmComboBox_SelectionChanged"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- 高级选项 -->
                    <GroupBox Header="高级选项" Style="{StaticResource GroupBoxStyle}">
                        <StackPanel Margin="0,10,0,0">
                            <!-- 抖动效果 -->
                            <CheckBox x:Name="DitheringCheckBox" Content="启用抖动效果"
                                      Foreground="#F1F1F1" Background="#3C3C3C"
                                      Margin="0,0,0,10" Checked="DitheringCheckBox_Checked"
                                      Unchecked="DitheringCheckBox_Unchecked"/>
                            
                            <!-- 边缘平滑 -->
                            <TextBlock Text="边缘平滑:" Style="{StaticResource ControlLabelStyle}"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="EdgeSmoothingSlider" Grid.Column="0" 
                                        Minimum="0" Maximum="1" Value="0.5" TickFrequency="0.1"
                                        ValueChanged="EdgeSmoothingSlider_ValueChanged"/>
                                <TextBlock x:Name="EdgeSmoothingValue" Grid.Column="1" 
                                           Text="0.5" Foreground="#F1F1F1" 
                                           Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <!-- 对比度 -->
                            <TextBlock Text="对比度:" Style="{StaticResource ControlLabelStyle}"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="ContrastSlider" Grid.Column="0" 
                                        Minimum="0.1" Maximum="3" Value="1" TickFrequency="0.1"
                                        ValueChanged="ContrastSlider_ValueChanged"/>
                                <TextBlock x:Name="ContrastValue" Grid.Column="1" 
                                           Text="1.0" Foreground="#F1F1F1" 
                                           Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <!-- 亮度 -->
                            <TextBlock Text="亮度:" Style="{StaticResource ControlLabelStyle}"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="BrightnessSlider" Grid.Column="0" 
                                        Minimum="0.1" Maximum="2" Value="1" TickFrequency="0.1"
                                        ValueChanged="BrightnessSlider_ValueChanged"/>
                                <TextBlock x:Name="BrightnessValue" Grid.Column="1" 
                                           Text="1.0" Foreground="#F1F1F1" 
                                           Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <!-- 饱和度 -->
                            <TextBlock Text="饱和度:" Style="{StaticResource ControlLabelStyle}"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="SaturationSlider" Grid.Column="0" 
                                        Minimum="0" Maximum="2" Value="1" TickFrequency="0.1"
                                        ValueChanged="SaturationSlider_ValueChanged"/>
                                <TextBlock x:Name="SaturationValue" Grid.Column="1" 
                                           Text="1.0" Foreground="#F1F1F1" 
                                           Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- 预设管理 -->
                    <GroupBox Header="预设管理" Style="{StaticResource GroupBoxStyle}">
                        <StackPanel Margin="0,10,0,0">
                            <Button x:Name="SavePresetButton" Content="保存当前预设" 
                                    Style="{StaticResource ToolButtonStyle}"
                                    Click="SavePresetButton_Click" Margin="0,0,0,5"/>
                            <Button x:Name="LoadPresetButton" Content="加载预设..." 
                                    Style="{StaticResource ToolButtonStyle}"
                                    Click="LoadPresetButton_Click"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- 状态栏 -->
        <StatusBar Grid.Row="3" Background="#3C3C3C" Foreground="#F1F1F1">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            
            <StatusBarItem Grid.Column="0">
                <TextBlock x:Name="StatusText" Text="就绪"/>
            </StatusBarItem>
            
            <StatusBarItem Grid.Column="2">
                <TextBlock x:Name="ImageInfoText" Text="未加载图片"/>
            </StatusBarItem>
            
            <StatusBarItem Grid.Column="3">
                <ProgressBar x:Name="ProgressBar" Width="100" Height="15" 
                             Visibility="Collapsed" Margin="5,0,0,0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>